/* ##################################################################### */
/* #############    Textual CSS - styling for GLaDOS UI    ############# */
/* ##################################################################### */

/* ====================================================== */
/* =================== General colours ================== */
/* ====================================================== */

$primary: #ffb000;
$foreground: #ffb000;
$background: #282828;
$surface: $background;

/* ====================================================== */
/* ===================== Main Screen ==================== */
/* ====================================================== */

Screen {
    align-horizontal: right;
}

Header {
    color: $primary;
}

HeaderClock {
    color: $primary;
    width: auto;
}

#body {
    layout: horizontal;
    border: solid $primary;
    layers: bottom top;
    margin-top: 1;
}

.block {
    border: solid $primary;
    color: $primary 80%;
    height: 11;
    width: 22;
}

#log_area {
    text-align: right;
    layer: bottom;
    padding: 1 4;
    width: 70%;
    scrollbar-color: $primary 40%;
    scrollbar-color-hover: $primary 86%;
    scrollbar-size: 1 1;
    color: $foreground;
}

#utility_area {
    layer: bottom;
    width: 30%;
    padding: 1;
}

#block_container {
    layout: horizontal;
    margin: 1 2 0 0;
    height: auto;
    width: auto;
    layer: top;
}

#scrolling_block {
    padding: 0 1;
}

#text_block {
    align: center middle;
    text-align: center;
    width: 15;
}

#recipe {
    scrollbar-size: 0 0;
    color: $foreground 10%;
    layer: bottom;
}

#dynamic_panel {
    scrollbar-size: 1 1;
    border: solid $primary;
    color: $foreground;
}

#dynamic_panel.hidden {
    display: none;
}

#content_header {
    background: $primary;
    color: $background;
    text-align: center;
    height: 1;
    text-style: bold;
}

#content_area {
    padding: 1;
    scrollbar-size: 1 1;
}

/* ====================================================== */
/* ==================== Text Input ==================== */
/* ====================================================== */

#text_input {
    dock: bottom;
    height: 5;
    border: solid $primary;
    margin: 1;
    background: $surface;
}

#text_input.hidden {
    display: none;
}

#input_label {
    height: 1;
    text-align: center;
    background: $primary;
    color: $background;
}

#llm_input {
    height: 3;
    border: none;
    background: $surface;
    color: $foreground;
}

/* ====================================================== */
/* ===================== Help Screen ==================== */
/* ====================================================== */

#help_screen {
    align: center middle;
}

#help_dialog {
    border-title-align: center;
    border-title-style: bold;
    border: $primary 70% panel;
    color: $primary;
    text-align: center;
    min-height: 20;
    padding: 1 2;
    height: 20;
    width: 60;
}

/* ====================================================== */
/* ==================== Splash screen =================== */
/* ====================================================== */

SplashScreen {
    padding: 0 5;
    scrollbar-size: 0 0;
    border: solid $primary;
}

#splash_logo_container {
    align-horizontal: center;
    height: auto;
    margin-bottom: 4;
}

#splash_logo {
    width: auto;
    padding-left: 3;
}

#banner {
    color: $primary;
}

#login_text {
    color: $primary;
    height: auto;
    padding-bottom: 2;
}